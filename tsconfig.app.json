{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/browser",
    "module": "es2020",
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
